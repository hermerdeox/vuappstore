{
	"name": "vuappstore",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3700 --host",
		"build": "vite build",
		"preview": "vite preview --port 3700 --host",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:all": "npm run test:run && npm run test:e2e",
		"pwa:generate-icons": "node scripts/generate-icons.js",
		"pwa:validate": "npx pwa-asset-generator --help",
		"pwa:audit": "npx lighthouse http://localhost:3700 --only-categories=pwa --chrome-flags='--headless'",
		"pwa:test": "npm run build && npm run preview",
		"sanitize": "npx tsx scripts/sanitize-payments.ts ./src",
		"sanitize:scan": "npx tsx scripts/sanitize-payments.ts --scan ./src",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251221.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/svelte": "^5.2.9",
		"@types/better-sqlite3": "^7.6.13",
		"@types/qrcode": "^1.5.6",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"@vitest/coverage-v8": "^4.0.14",
		"autoprefixer": "^10.4.21",
		"better-sqlite3": "^12.5.0",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"jsdom": "^27.2.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vitest": "^4.0.14",
		"wrangler": "^4.56.0"
	},
	"dependencies": {
		"@noble/curves": "^2.0.1",
		"@noble/hashes": "^2.0.1",
		"bits-ui": "^2.14.2",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"envalid": "^8.1.0",
		"gsap": "^3.13.0",
		"lucide-svelte": "^0.552.0",
		"mode-watcher": "^1.1.0",
		"qrcode": "^1.5.4",
		"sass": "^1.93.3",
		"svelte-intersection-observer": "^1.0.0",
		"svelte-meta-tags": "^4.5.0",
		"svelte-motion": "^0.12.2",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"zod": "^4.1.12"
	}
}
