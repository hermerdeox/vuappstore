# ===========================================
# VU APP STORE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in values
# NEVER commit .env to version control

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://vuuser:password@localhost:5432/vuappstore"

# ===========================================
# VU SOVEREIGN IDENTITY (Required)
# ===========================================
# Secret key for signing identity challenges (min 32 chars)
VU_IDENTITY_SECRET="your-32-character-minimum-secret-key-here"

# Session token expiration in seconds (default: 7 days)
VU_SESSION_EXPIRY=604800

# Challenge expiration in seconds (default: 5 minutes)
VU_CHALLENGE_EXPIRY=300

# ===========================================
# CRYPTO PAYMENTS - LEVEL 0: MONERO (XMR)
# ===========================================
# Monero wallet RPC endpoint
MONERO_WALLET_RPC_URL="http://localhost:18082/json_rpc"
MONERO_WALLET_RPC_USER="rpc_user"
MONERO_WALLET_RPC_PASSWORD="rpc_password"

# Primary wallet address for receiving payments
MONERO_PRIMARY_ADDRESS="4..."

# View key for payment verification (optional, for read-only verification)
MONERO_VIEW_KEY=""

# ===========================================
# CRYPTO PAYMENTS - LEVEL 1: LIGHTNING
# ===========================================
# LND/CLN REST API endpoint
LIGHTNING_NODE_URL="https://localhost:8080"
LIGHTNING_MACAROON_HEX=""
LIGHTNING_TLS_CERT_PATH="/path/to/tls.cert"

# ===========================================
# CRYPTO PAYMENTS - LEVEL 2: BITCOIN/ETHEREUM
# ===========================================
# Bitcoin (BTCPay Server or direct node)
BITCOIN_RPC_URL="http://localhost:8332"
BITCOIN_RPC_USER=""
BITCOIN_RPC_PASSWORD=""
BITCOIN_XPUB=""

# Ethereum (Infura/Alchemy or self-hosted)
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"
ETHEREUM_WALLET_ADDRESS="0x..."
ETHEREUM_PRIVATE_KEY=""

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Public URL of the application
PUBLIC_APP_URL="https://store.vu"

# Node environment
NODE_ENV="development"

# Server port (default: 3700)
PORT=3700

# ===========================================
# SECURITY
# ===========================================
# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=60

# CORS allowed origins (comma-separated)
CORS_ORIGINS="https://store.vu,https://www.store.vu"

# ===========================================
# OPTIONAL: DEVELOPMENT
# ===========================================
# Enable debug logging
DEBUG=false

# Skip payment verification in dev (NEVER in production)
DEV_SKIP_PAYMENT_VERIFICATION=false
