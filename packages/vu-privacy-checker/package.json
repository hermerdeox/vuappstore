{
  "name": "@vu/privacy-checker",
  "version": "1.0.0",
  "description": "Brutally honest privacy level checker for VU apps - Framework agnostic, zero compromise",
  "author": "VU Labs",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./svelte": {
      "types": "./dist/svelte/index.d.ts",
      "svelte": "./dist/svelte/index.js",
      "import": "./dist/svelte/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./analyzer": {
      "types": "./dist/analyzer.d.ts",
      "import": "./dist/analyzer.js"
    }
  },
  "files": [
    "dist",
    "src",
    "svelte",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "build:svelte": "svelte-package -i svelte -o dist/svelte",
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "privacy",
    "vu",
    "zero-knowledge",
    "security",
    "privacy-checker",
    "framework-agnostic",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vu-labs/vu-privacy-checker"
  },
  "bugs": {
    "url": "https://github.com/vu-labs/vu-privacy-checker/issues"
  },
  "homepage": "https://vuappstore.com/packages/privacy-checker",
  "peerDependencies": {
    "svelte": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

